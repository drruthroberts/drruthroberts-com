<div class="amr_what_learn amr_dots_arrows" style="background-color:{{ section.settings.bg_color }};">
  <div class="amr_container_1170">
    <div class="amr_WL_header">
      {% if section.settings.heading != blank %}<h2>{{ section.settings.heading }}</h2>{% endif %}
      {% if section.settings.desc != blank %}<div>{{ section.settings.desc }}</div>{% endif %}
    </div>
    <div class="amr_WL_points">
      {% for block in section.blocks %}
        <div class="amr_WL_item">
          <div class="amr_WL_item_inner">
          <h3>{{ block.settings.point_number }}</h3>
          <h3 class="amr_WL_item_title">{{ block.settings.title }}</h3>
          <div>{{ block.settings.detail }}</div>
          </div>
        </div>
      {% endfor %}
    </div>
</div>
</div>
{% schema %}
{
  "name": "What you will learn",
   "max_blocks":6,
  "settings": [
    {
      "type":"color",
      "id":"bg_color",
      "label":"Background Color"
    },
    {
      "type": "text",
      "id": "heading",
      "label":"Heading"
    },
    {
      "type": "richtext",
      "id": "desc",
      "label":"Description"
    }
  ],
  "blocks": [
    {
      "type": "points",
      "name": "Point",
      "settings": [
        {
          "type": "text",
          "id": "point_number",
          "label":"Point Number"
        },
        {
          "type": "text",
          "id": "title",
          "label":"Title"
        },
        {
          "type": "richtext",
          "id": "detail",
          "label":"Detail"
        }
      ]
    }
  ],
  "presets": [
      {
        "name": "What you will learn"
      }
    ]
}
{% endschema %}