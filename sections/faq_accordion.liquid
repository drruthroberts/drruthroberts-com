{% if product.tags contains 'faq' %}
<div class="amr_faq_accordion">
  <div class="amr_container_1170">
    <div class="amr_pet_consultants_header">
      {% if section.settings.heading != blank %}<h2>{{ section.settings.heading }}</h2>{% endif %}
      {% if section.settings.desc != blank %}<div>{{ section.settings.desc }}</div>{% endif %}
    </div>
    <div class="amr_faq_list">
      {% for block in section.blocks %}
        {% if block.settings.title != blank %}
          <div class="amr_faq_item">
            <button class="amr_accordion"><span>{{ block.settings.title }}</span><img src="https://cdn.shopify.com/s/files/1/0017/5443/1553/files/Vector_002ad72b-39a6-4f7f-8764-e837678cc6ec.svg?v=1692192786"></button>
            <div class="amr_panel">{{ block.settings.detail }}</div>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>
{% endif %}
<style>
  .amr_panel{
    display:none;
  }
</style>
<script>
var acc = document.getElementsByClassName("amr_accordion");
var i;

for (i = 0; i < acc.length; i++) {
  acc[i].addEventListener("click", function() {
    this.classList.toggle("amr_active");
    var panel = this.nextElementSibling;
    if (panel.style.display === "block") {
      panel.style.display = "none";
    } else {
      panel.style.display = "block";
    }
  });
}
</script>
{% schema %}
{
  "name": "FAQ Accordion",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label":"Heading"
    },
    {
      "type": "richtext",
      "id": "desc",
      "label":"Description"
    }
  ],
  "blocks": [
    {
      "type": "FAQ",
      "name": "FAQ",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label":"Title"
        },
        {
          "type": "richtext",
          "id": "detail",
          "label":"Detail"
        }
      ]
    }
  ],
  "presets": [
      {
        "name": "FAQ Accordion"
      }
    ]
}
{% endschema %}