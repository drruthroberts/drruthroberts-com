<style>
  .video-{{section.id}}.rewordmax_container {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    max-width: {{ section.settings.desktopMaxWidth }}; 
  }

  @media (max-width:1024px) {
    .video-{{section.id}}.rewordmax_container {
      max-width: {{ section.settings.tabletMaxWidth }}; 
    }
  }

  @media (max-width: 768px ) {
    .video-{{section.id}}.rewordmax_container {
      max-width: {{ section.settings.mobileMaxWidth }}; 
    }
  }

  .text-left{
      text-align:left!important;
  }
      .main {
    font-family:Arial;
    display:block;
    margin:0 auto;
  }
  .petviddd {
      display: flex;
      flex-wrap: wrap;
      justify-content: space-between;
  }
  .petvideo50 {
      width: 48%;
      float:left;
  }
  .petbideowidth{
      position: absolute;
      background: #FFFFFF;
      border-radius: 24px 24px 0px 0px;
      width: 80%;
      margin: 0 auto;
      bottom:37%;
      left:15%;
  }
  h2.petvheadd {
      font-family: 'Oakley Script';
      font-style: normal;
      font-weight: 400;
      font-size: 64px;
      line-height: 57px;
      letter-spacing: 0.02em;
      text-transform: capitalize;
      color: #184B44;
      text-align: center;
      margin: 0;
      padding-top: 15px;
  }
  .petadvicevideo.slick-slide{
      margin:0 5px;
  }

  .petvideobtn {
      padding-bottom: 23px;
  }

  .petadvicevideo {
      display: flex;
      flex-direction: column;
      align-items: center;
  }
  h3.petvideott {
      margin: 0 0 10px;
      font-family: 'BLT-Heirloom';
      font-style: normal;
      font-weight: 300;
      font-size: 30px;
      line-height: 40px;
  }

  .petvideohead {
    font-family: 'Josefin Sans';
    font-style: normal;
    font-weight: 500;
    font-size: 18px;
    line-height: 20px;
    text-align: center;
    color: #1E1E1E;
    margin:0;
  }

  .h3.petvideott {
    font-family: 'Josefin Sans';
    font-style: normal;
    font-weight: 500;
    font-size: 18px;
    line-height: 30px;
    text-align: center;
    text-transform: uppercase;
    color: #1E1E1E;
  }
  .petvideoflex {
    display: flex;
    flex-wrap: wrap;
    width:100%;
    margin:0 auto;
    justify-content: space-between;
    margin-top: 4%;
  }
  .petadvicevideo {
    width: 32.5%;
    position: relative;
  }
  .petvideobtn{
      display:flex;
      align-item:center;
      justify-content:center;
      padding-top: 35px;
  }
  .petviddd{
      position:relative;
  }
  button.drag.petvideo.slick-prev.pull-left.slick-arrow {
      top: 95%!important;
      left: 0%!important;
  }
  button.drag.petvideo2.slick-next.pull-right.slick-arrow {
      top: 21%;
          right: -15px;
  }
  .petvideo50:nth-child(2){
      display: flex;
      flex-direction: column;
      align-items: start;
          padding-left: 5%;
  }
  .petvideottdess {
    font-family: 'Josefin Sans';
  font-style: normal;
  font-weight: 500;
  font-size: 18px;
  line-height: 30px;
  color: #000000;
  }

  .video-container {
      padding-bottom: 56.25%;
      position: relative;
      width: 100%;
  }
  .video-container iframe {
      position: absolute;
      top: 0;
      left: 0;
      width: 100% !important;
      height: 100% !important;
      min-height: unset !important;
  }
  .petbideowidth {
      margin-top: -40px;
      position: relative;
      z-index: 1;
      left: 0;
      right: 0;
      padding: 12px 0;
      max-width: 200px;
      border-radius: 20px 20px 0 0;
  }
  h3.petvideott {
      margin: 15px 0 5px;
  }
  .petadvicevideo {
      margin: 0 !important;
      padding: 0 15px;
  }
  {% comment %} .petvideoflex {
      width: calc(100% + 40px) !important;
      margin-left: -20px !important;
  } {% endcomment %}
  .video-section .custom-slider .slick-next {
    top: 24%;
  }
  .video-section .custom-slider .slick-prev {
    top: 24%;
  }

    
  @media screen and (max-width: 768px) { 
      .petvideo50{
          width:98%;
          margin:0 2%;
      }
  }
  @media screen and (max-width: 520px) { 
    h2.petvheadd{
      font-size:45px;
    }
    }
  @media screen and (max-width: 420px) { 
    h2.petvheadd{
      font-size: 38px;
      line-height: 48px;
    }
  
    h3.petvideott ,.petvideottdess {
      font-size: 15px;
      line-height: 26px;
    }
  }
  .video-width {
    margin: 0 auto;
    padding-top: 11px;
    padding-bottom: 5px;
    max-width: 200px;
    border-radius: 20px 20px 0 0;
  }
</style>

  <script>
  $(document).ready(function() {
    $('.slider-for').slick({
      slidesToShow: 1,
      slidesToScroll: 1,
      dots: false,
      fade: true,
        infinite: true,
        arrows:true
        });
    $('.custom-slider').slick({
      slidesToShow: 3,
      slidesToScroll: 1,
      dots: false,
      arrows:true,
      infinite: true,
      nextArrow: '<button class="slick-next slick-arrow" aria-label="Next" type="button" style=""><img src="https://cdn.shopify.com/s/files/1/0017/5443/1553/files/arrow_right.png?v=1681670270" alt="arrow_right"></button>',
      prevArrow: '<button class="slick-prev slick-arrow" aria-label="Previous" type="button" style=""><img src="https://cdn.shopify.com/s/files/1/0017/5443/1553/files/arrow_left.png?v=1681670270" alt="arrow_left"></button>',
      responsive: [
        {
          breakpoint: 991,
          settings: {
            slidesToShow: 2,
            slidesToScroll: 1,
            nextArrow: '<button class="slick-next slick-arrow" aria-label="Next" type="button" style=""><img src="https://cdn.shopify.com/s/files/1/0017/5443/1553/files/arrow_right.png?v=1681670270" alt="arrow_right"></button>',
            prevArrow: '<button class="slick-prev slick-arrow" aria-label="Previous" type="button" style=""><img src="https://cdn.shopify.com/s/files/1/0017/5443/1553/files/arrow_left.png?v=1681670270" alt="arrow_left"></button>'
          }
        },

        {
          breakpoint: 620,
          settings: {
            slidesToShow: 1,
            slidesToScroll: 1,
            arrows: true,
            nextArrow: '<button class="slick-next slick-arrow" aria-label="Next" type="button" style=""><img src="https://cdn.shopify.com/s/files/1/0017/5443/1553/files/arrow_right.png?v=1681670270" alt="arrow_right"></button>',
            prevArrow: '<button class="slick-prev slick-arrow" aria-label="Previous" type="button" style=""><img src="https://cdn.shopify.com/s/files/1/0017/5443/1553/files/arrow_left.png?v=1681670270" alt="arrow_left"></button>'

          }
        }    
      ]
    });
  })
  </script>

<div class="topborder"></div> 

<div class="video-{{section.id}} rewordmax_container main video-section">
  <div class="petviddetail">
      <h2 class="petvheadd">{{section.settings.video_header}}</h2>
      <div class="video-description">{{ section.settings.video_description }}</div>  
  </div>
  {% if section.settings.vertical %}
    <div class="slider-for videforwidth">
        
        {%- for block in section.blocks -%}
            <div class="petviddd">  
                <div class="petvideo50">
                    <div class="video-container">
                        <iframe id="testvideo" class="testvideo" src="{{ block.settings.petvideourl }}" frameborder="0" allowfullscreen></iframe>
                    </div>
                </div>
                <div class="petvideo50">
                  
                    <div class="petvidtitle">
                        <h3 class="petvideott text-left">{{ block.settings.petvideocontent}}</h3>
                        <h3 class="petvideottdess text-left">{{ block.settings.petvideocontentdesss}}</h3>
                    </div>
                    <div class="petvideobtn">

                        <a href="{{ block.settings.petvidbtnurl }}" class="btnspace1">{{ block.settings.petvideobtn }} 
                            <svg xmlns="http://www.w3.org/2000/svg" width="35" height="9" viewBox="0 0 35 9" fill="none">
                                <path d="M1.37891 4.5L33.0252 4.5M33.0252 4.5L26.5787 1M33.0252 4.5L26.5787 8" stroke="#184B44" stroke-linecap="round"/>
                            </svg>
                        </a>
                    </div> 
                </div>
            </div>
        {%- endfor -%}
        
    </div>
  {% endif %}
  <div class="petvideoflex custom-slider">
      {%- for block in section.blocks -%}
        <div class="petadvicevideo">
            <div class="video-container">
                <iframe id="testvideo" class="petvideo" src="{{ block.settings.petvideourl }}" frameborder="0" allowfullscreen></iframe>
            </div>
            <div class="{% if block.settings.video_overlap %} petbideowidth {% endif %} video-width">
                <h2 class="petvideohead">{{ block.settings.petviid}}</h2>
            </div>
            <div class="petvidtitle">
              <h3 class="petvideott">{{ block.settings.petvideocontent}}</h3>
            </div>
              {% comment %} <div class="petvideobtn">
                <a href="{{ block.settings.video_url }}" class="btnspace1">{{ block.settings.video_btn }} 
                    <svg xmlns="http://www.w3.org/2000/svg" width="35" height="9" viewBox="0 0 35 9" fill="none">
                        <path d="M1.37891 4.5L33.0252 4.5M33.0252 4.5L26.5787 1M33.0252 4.5L26.5787 8" stroke="#184B44" stroke-linecap="round"/>
                    </svg>
                </a>
            </div>  {% endcomment %}
        </div>
      {%- endfor -%}
  </div>
  <div class="petvideobtn">
    <a href="{{ section.settings.video_url }}" class="btnspace1">{{ section.settings.video_btn }} 
        <svg xmlns="http://www.w3.org/2000/svg" width="35" height="9" viewBox="0 0 35 9" fill="none">
            <path d="M1.37891 4.5L33.0252 4.5M33.0252 4.5L26.5787 1M33.0252 4.5L26.5787 8" stroke="#184B44" stroke-linecap="round"/>
        </svg>
    </a>
  </div> 
</div>

{% schema %} 
  {
    "name": "pet_video",
    "tag": "section",
    "class": "pet_video",
    "settings": [
      {
        "type": "text",
        "id": "video_header",
        "label": "Video Header",
        "default": " Our Product Review"
      },
      {
        "type": "text",
        "id": "desktopMaxWidth",
        "default": "100%",
        "label": "Max width on desktop",
        "info": "For example: 80% or 1000px"
      },
      
      {
        "type": "text",
        "id": "mobileMaxWidth",
        "label": "Max width on mobile",
        "default": "100%",
        "info": "For example: 80% or 1000px"
      },
      {
        "type": "richtext",
        "id": "video_description",
        "label": "Video Description",
        "default": "<p>Watch our engaging webinars, live streams, and pet health vlogs. to valuable knowledges and practices for your pet's wellness</p>"
      },
      {
        "type": "url",
        "id": "video_url",
        "label": "Video url",
      },
      {
        "type": "text",
        "id": "video_btn",
        "label": "Video Button",
        "default": "WATCH MORE VIDEOS"
      },
      {
        "type": "checkbox",
        "id": "vertical",
        "label": "Display with vertical slide"
      },
      {
        "type": "header",
        "content": "Content Padding"
      },
      {
        "type": "range",
        "id": "padding_top",
        "min": 30,
        "max": 100,
        "step": 1,
        "unit": "%",
        "label": "Padding top",
        "default": 50
      },
      {
        "type": "range",
        "id": "padding_bottom",
        "min": 30,
        "max": 100,
        "step": 1,
        "unit": "%",
        "label": "Padding bottom",
        "default": 50
      },
    ],
    "blocks": [
    {
      "type": "block",
      "name": "block",
      "settings": [
      {
        "type": "url",
        "id": "petvideourl",
        "label": "Video URL"
        },
      
        {
          "type": "text",
          "id": "petviid",
          "label": "Heading"
        },
        {
          "type": "text",
          "id": "petvideocontent",
          "label": "Sub Heading"
        },
        {
          "type": "text",
          "id": "petvideocontentdesss",
          "label": "Description"
        },
        {
          "type": "text",
          "id": "petvideobtn",
          "label": "Button"
        },
        {
          "type": "url",
          "id": "petvidbtnurl",
          "label": "Button Link"
        },
        {
          "type": "checkbox",
          "id": "video_overlap",
          "label": "Content Overlap"
        }
      ]
    }
      ],
  "presets": [
      {
        "name": "pet_video"
      }
    ]
  }
{% endschema %}
