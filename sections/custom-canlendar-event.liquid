{{ 'custom-event-page.css' | asset_url | stylesheet_tag }}

<div class="custom-canlendar-event">
    <div class="custom-canlendar-event-container">
        <div class="custom-canlendar">
            <div class="canlendar-content">
                <div class="canlendar-content-date">{{ section.settings.date }}</div>
                <div class="canlendar-year-with-month">
                    <div class="canlendar-month">{{ section.settings.month_text }}</div>
                    <div class="canlendar-year">{{ section.settings.year }}</div>
                </div>
            </div>
        </div>
        <div class="custom-event-container">
            <div class="custom-event-content">
                <div class="custom-event-content-image">
                    <img src="{{ section.settings.event_img | img_url: 'master' }}" class="custom-event-image" alt="image">
                </div>
                <div class="custom-event-content-detail">
                    <div class="event-detail-title">{{ section.settings.title }}</div>
                    <div class="event-detail-date custom-canlendar-date">
                        <div class="event-calendar-date">
                            <div class="canlendar-date">
                                <span class="week" data-value="{{ section.settings.week }}">{{ section.settings.week_text }},</span>
                                <span class="month" data-value="{{ section.settings.month }}">{{ section.settings.month_text }}</span>
                                <span class="date" data-value="{{ section.settings.date }}">{{ section.settings.date }}th,</span>
                            </div>
                        </div>
                        <div class="event-calendar-time">
                            <div class="canlendar-time">
                                <span class="start-hour">{{ section.settings.start_hour }}PM</span>
                                <span> ~ </span>
                                <span class="end-hour">{{ section.settings.end_hour }}PM</span>
                                <span class="time-zone">{{ section.settings.time_zone }}</span>
                            </div>
                        </div>
                    </div>
                    <div class="event-detail-description">{{ section.settings.description }}</div>
                    <div class="event-btn">
                        {%- if section.settings.button_label_1 != blank -%}
                            <a
                            {% if section.settings.button_link_1 == blank %}
                                role="link" aria-disabled="true"
                            {% else %}
                                href="{{ section.settings.button_link_1 }}"
                            {% endif %}
                            class="rx_read_more_btn_green"
                            >
                            {{- section.settings.button_label_1 | escape -}}
                            {% render 'icon-arrow' %}
                            </a>
                        {%- endif -%}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
 
