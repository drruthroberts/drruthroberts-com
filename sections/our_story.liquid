<div class="amr_our_story">
  <div class="amr_container_1170">
    <h2 class="amr_our_story_header">{{ section.settings.heading }}</h2>
    <div class="amr_story_grup">
      {% for block in section.blocks %}
        <a class="amr_story_item" href="{{ block.settings.btn_url }}">
          <img src="{{ block.settings.main_img | img_url:'master' }}">
          <h3>{{ block.settings.title }}</h3>
          <div>{{ block.settings.detail }}</div>
        </a>
      {% endfor %}
    </div>
  </div>
</div>
{% schema %}
{
  "name": "Our Story section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label":"Heading"
    }
  ],
  "blocks": [
    {
      "type": "story",
      "name": "Story",
      "settings": [
        {
          "type": "image_picker",
          "id": "main_img",
          "label":"Main Image"
        },
        {
          "type": "text",
          "id": "title",
          "label":"Title"
        },
        {
          "type":"richtext",
          "id":"detail",
          "label":"Detail"
        },
        {
          "type": "url",
          "id": "btn_url",
          "label":"Story Link URL"
        }
      ]
    }
  ],
  "presets": [
      {
        "name": "Our Story section"
      }
    ]
}
{% endschema %}