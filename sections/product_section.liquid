
<style>
.product_section{
  padding : {{ section.setting.padding_top }}px 0 {{ section.setting.padding_bottom }}px 0;
  margin-bottom : 50px;
}
.product_box{
  max-width : 1300px;
  margin : 0 auto;
  padding : 0 40px;
  display : flex;
  flex-direction : {{ section.settings.image_placement }};
  border-radius : 24px;
  }
.reverse_class{
  border-radius : 0 !important;
  border-top-right-radius : 24px !important;
  border-bottom-right-radius : 24px !important;
}
.product_content{
  width : 60%;
  padding : 10px 50px;
  background-color : #F5F8F1;
  margin : 30px 0;
  border-top-left-radius : 24px;
  border-bottom-left-radius : 24px;
}
.product_image{
  width : 40%;
  position : relative;
}
.product_image>img{
  width : 100%;
  height : 100%;
  object-fit : cover;
  border-radius : 24px;
}
.product_content>h3{
  color: #1E1E1E;
  font-family: Lato;
  font-size: 30px;
  font-style: normal;
  font-weight: 300;
  line-height: 40px;
  letter-spacing: 0.6px;
  text-transform: capitalize;
}
.btn{
  color: #1E1E1E;
  text-align: center;
  font-family: "Josefin Sans";
  font-size: 14px;
  font-style: normal;
  font-weight: 600;
  line-height: 21px; /* 150% */
  letter-spacing: 4.2px;
  text-transform: uppercase;
  padding : 12px 30px;
  text-decoration : none;
  border : 1px solid #1E1E1E;
  border-radius : 24px;
}
.product_description{
  color: #1E1E1E;
  font-family: "Josefin Sans";
  font-size: 18px;
  font-style: normal;
  font-weight: 400;
  line-height: 30px;
  letter-spacing: 0.6px;
  padding-bottom : 20px;
}
  .buttons{
    display : flex;
    justify-content : space-between;
    align-items : center;
    padding : 0 30px;
  }
.learn_btn{
  color: #1E1E1E;
  font-family: "Josefin Sans";
  font-size: 14px;
  font-style: normal;
  font-weight: 600;
  line-height: 21px; /* 150% */
  letter-spacing: 4.2px;
  text-decoration-line: underline;
  text-transform: uppercase;
}
.product_price{
  position : absolute;
  background-color : black;
  z-index : 2;
  bottom : 0;
  width : fit-content;
  color: #FFF;
  text-align: center;
  font-family: "Josefin Sans";
  font-size: 30px;
  font-style: normal;
  font-weight: 600;
  line-height: 21px;
  letter-spacing: 4.2px;
  text-transform: uppercase;
  padding : 12px 15px;
  padding-right : 30px;
  border-top-right-radius : 24px;
  border-bottom-right-radius : 24px;
}
.btn_reverse{
  right : 0;
  padding-right : 15px;
  padding-left : 30px;
  border-top-right-radius : 0px;
  border-bottom-right-radius : 0px;
  border-top-left-radius : 24px;
  border-bottom-left-radius : 24px;
}
@media(max-width : 1024px){
  .buttons{
    padding : 0;
  }
  .product_description{
    padding-bottom : 0;
  }
  .product_content {
    padding-bottom : 30px;
  }
}
@media(max-width : 990px){
.product_box{
  flex-direction : column-reverse;
}
.product_content{
  width : 100%;
  margin-top : 0;
  border-radius : 0;
  border-bottom-left-radius : 24px;
  border-bottom-right-radius : 24px;
}
.product_image{
  width : 100%;
  display: flex;
  align-items: baseline;
}
.product_image>img{
  border-radius : 0;
  border-top-left-radius : 24px;
  border-top-right-radius : 24px;
}
</style>



<div class="product_section">
  <h1>{{ section.settings.heading }}</h1>
  {% if section.settings.product != blank %}
    <div class="product_box">
      <div class="product_content {% if section.settings.image_placement == "row-reverse" %} reverse_class {% endif %} ">
        {% if section.settings.product.title != blank %}
          <h3>{{ section.settings.product.title }}</h3>
        {% endif %}
          <p>{{ section.settings.product.vendor }}</p>
          <div class="product_description">
            {{ section.settings.product.description | truncate : 217 }}
          </div>
        <div class="buttons">
          <a class="btn" href="{{ section.settings.product.url }}"> ADD TO CART </a>
          {% if section.settings.learn_more_btn != blank %}
            <a class="learn_btn" href="{{ section.settings.product.url }}">
              Course Outline
            </a>
            {% endif %}
        </div>
      </div>
      <div class="product_image">
        {% for image in section.settings.product.images %}
            {% if forloop.index == 1 %}
              <img  src="{{ image.src | product_img_url: 'grande' }}">
            {% endif %}
          {% endfor %}
          <h3 class="product_price {% if section.settings.image_placement == "row" %} btn_reverse {% endif %}">{{ section.settings.product.price | money_with_currency }}</h3>
      </div>
    </div>
  {% endif %}
</div>






{% schema %}
  {
    "name": "Section name",
    "settings": [
      {
        "type" : "text",
        "id" : "heading",
        "label" : "Add Heading"
      },
      {
        "type" : "product",
        "id" : "product",
        "label" : "Add Product"
      },
      {
        "type" : "range",
        "id" : "padding_top",
        "label" : "Padding Top",
        "step" : 4,
        "min" : 0,
        "max" : 100,
        "default" : 0
       },
      {
        "type" : "range",
        "id" : "padding_bottom",
        "label" : "Padding Bottom",
        "step" : 4,
        "min" : 0,
        "max" : 100,
        "default" : 0
      },
      {
        "type" : "select",
        "id" : "image_placement",
        "label" : "Image Placement",
        "options" : [
          {
            "value" : "row-reverse",
            "label" : "Image First"
          },
          {
            "value" : "row",
            "label" : "Image Second"
          }
        ],
        "default" : "row"
      },
      {
        "type" : "checkbox",
        "id" : "learn_more_btn",
        "label" : "Enable Course Outline Botton"
      }
    ],
    "presets" : [
      {
        "name" : "Product Section"
      }
    ]
  }
{% endschema %}