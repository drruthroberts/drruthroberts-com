{{ 'custom-rich-text.css' | asset_url | stylesheet_tag }}

<style>
    .custom-{{ section.id }} {
        margin-top: {{ section.settings.margin_top }}px;
        margin-bottom: {{ section.settings.margin_bottom }}px;
        color: {{ section.settings.text_color }};
    }
    .custom-{{ section.id }}.background-img {
        background-image: url({{ section.settings.background_img |  image_url }});
        background-repeat: no-repeat;
        background-size:cover;
    }
  .custom-{{ section.id }} .rich-text--wrapper {
        padding-top: {{ section.settings.padding_top }}px;
        padding-bottom: {{ section.settings.padding_bottom }}px;
    }
</style>

<div class="custom-rich-text--container custom-{{ section.id }} {% if section.settings.background_img %} background-img {% endif %} {% if section.settings.link_banner_button == "with banner" %} link_banner_button {% elsif section.settings.link_banner_button == "with bundle"%} link_bundle_button {% endif %}">
    <div class="rich-text--wrapper page-width">
        <div class="rich-text--blocks">
            {% if section.settings.heading %}
                <div class="rich-text--heading">{{ section.settings.heading }}</div>
            {% endif %}
            {% if section.settings.sub_heading %}
                <div class="rich-text--subheading">{{ section.settings.sub_heading }}</div>
            {% endif %}
            {% if section.settings.content %}
                <div class="rich-text--content">{{ section.settings.content }}</div>
            {% endif %}
        </div>
        {% if section.settings.btn_url %}
            <div class="rich-text--button">
                <a class="rich-text__btn" href=" {{ section.settings.btn_url }}">{{ section.settings.btn_text }}</a>
            </div>
        {% endif %}
    </div>
</div>
{% schema %}
  {
    "name": "Custom rich text",
    "tag": "section",
    "class": "custom-rich-text",
    "settings": [
        {
            "type": "image_picker",
            "id": "background_img",
            "label": "Background image"
        },
        {
            "type": "text",
            "id": "heading",
            "label": "Heading",
            "default": "heading"
        },
        {
            "type": "richtext",
            "id": "sub_heading",
            "label": "Sub heading",
            "default": "<p>Sub heading</p>"
        },
        {
            "type": "richtext",
            "id": "content",
            "label": "Content",
            "default": "<p>content</p>"
        },
        {
            "type": "url",
            "id": "btn_url",
            "label": "Button url"
        },
        {
            "type": "text",
            "id": "btn_text",
            "label": "Button text",
            "default": "button"
        },
        {
            "type": "color",
            "id": "text_color",
            "label": "Text color"
        },
        {
            "type": "text",
            "id": "link_banner_button",
            "label": "Link with button"
        },
        {
            "type": "header",
            "content": "Padding content"    
        },
        {
            "type": "range",
            "id": "padding_top",
            "label": "Padding top",
            "min": 0,
            "max": 100,
            "step": 1,
            "default": 40
        },  
        {
            "type": "range",
            "id": "padding_bottom",
            "label": "Padding bottom",
            "min": 0,
            "max": 100,
            "step": 1,
            "default": 40
        },
        {
            "type": "range",
            "id": "margin_top",
            "label": "Margin top",
            "min": 0,
            "max": 100,
            "step": 1,
            "default": 40
        },  
        {
            "type": "range",
            "id": "margin_bottom",
            "label": "Margin bottom",
            "min": 0,
            "max": 100,
            "step": 1,
            "default": 40
        }
    ],
    "presets": [
      {
        "name": "Custom rich text",
        "settings": {
        }
      }
    ]
  }
{% endschema %}