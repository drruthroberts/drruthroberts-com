<div class="cmax_container py">
        <div class="appbg">
                <div class="appcontent">
                        <h2 class="apconhead">{{section.settings.apphead}}</h2>
                        <h2 class="subappconhead">{{section.settings.subappconhead}}</h2>
                        <h2 class="apconhead2">{{section.settings.appdesc}}</h2>
                </div>
        </div>
        <div class="appflex ">
                <div class="app40">
                    <label for="name"><input type="text" id="name" placeholder="Name" value="" class="addname"></label>
                    <label for="email"><input type="email" id="email" placeholder="Email"class="addname"></label>
                    <label for="phone"><input type="tel" id="mobile_code" class="form-control" placeholder="Phone Number" name="contact[{{ 'templates.contact.form.phone' | t }}]"required></label>
                </div>
                <div class="app60">
                    <p class="appcontctdes">{{section.settings.appcontctdes}}</p>
                </div>
        </div>
        {% if section.settings.appbtnurl %}
        <div class="appbtn">
            <a href="{{ section.settings.appbtnurl }}" class="appbtnspace" id="appbtnspace">{{ section.settings.applbtn }} 
                {% render 'icon-arrow' %}
            </a>
        </div> 
        {% endif %}
</div>

{% schema %}
  {
    "name": "application",
    "settings": [
          {
    "type": "text",
    "id": "apphead",
    "label": "Heading"
      },
       {
    "type": "text",
    "id": "subappconhead",
    "label": "Sub-Heading"
      },
          {
    "type": "text",
    "id": "appdesc",
    "label": "Description"
      },
      {
    "type": "text",
    "id": "appcontctdes",
    "label": "Description"
      },
      {
        "type": "text",
    "id": "applbtn",
    "label": "Button"
       },
        {
        "type": "url",
    "id": "appbtnurl",
    "label": "Button Link"
       }
    ],
    
    "presets": [
    {
    "name": "application"
    }
    ]
  }
{% endschema %}
<style>
.appbg {
 
    border-radius: 24px;
    width: 90%;
    margin: 0 auto;
}
h2.apconhead ,h2.apconhead2 {
    font-family: 'BLT-Heirloom';
    font-style: normal;
    font-weight: 300;
    font-size: 30px;
    line-height: 40px;
    text-align: center;
    color: #1E1E1E;
    margin:0;
}
.appcontent {
    padding: 3% 0;
}
.appflex {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-evenly;
    width: 90%;
    margin: 0 auto;
    margin-top: 1%;
}
.app60 {
    width: 60%;
}
.app40 {
    width: 40%;
}
h2.apconhead2{
        font-size: 18px;
        line-height: 22px;
}
.app40 input{
  border-radius: 24px;
  border: 1px solid #184B44;
  padding: 12px 200px 12px 27px
}
.subappconhead{
    font-family: 'BLT-Heirloom';
font-style: normal;
font-weight: 300;
font-size: 24px;
line-height: 32px;
text-align: center;
color: #1E1E1E;
margin-top:0;
width:90%;
}
input:focus-visible {
  outline: none;
  outline-offset: none;
  box-shadow: none;
}
.app40 label {
  width: 100%;
  display: flex;
  justify-content: center;
  margin: 5% auto;
  align-items: center;
}
.app40 input::placeholder{
  font-family: 'Josefin Sans';
font-style: normal;
font-weight: 500;
font-size: 18px;
line-height: 30px;
color: #1E1E1E;
}
.appbtn {
    display: flex;
    justify-content: center;
    margin: 3% 0 5% 0;
}
a.appbtnspace{
    display: flex;
    align-items: center;
    font-family: 'Josefin Sans';
    font-style: normal;
    font-weight: 600;
    font-size: 14px;
    line-height: 21px;
    letter-spacing: 0.3em;
    text-transform: uppercase;
    border: 2px solid #EFA316;
    border-radius: 25.5px;
    text-decoration: none;
    padding: 15px 25px;
    color: #fff;
    background: #EFA316;

}
p.appcontctdes {
    font-family: 'Josefin Sans';
    font-style: normal;
    font-weight: 500;
    font-size: 18px;
    line-height: 30px;
    color: #1E1E1E;
        padding: 0px 6%;
}
@media only screen and (max-width: 1100px) {
    p.appcontctdes{
        padding-left: 6%;
    padding-right: 0%;
    }
    .app40{  
          height: auto;
    margin: auto;
    }
}
@media only screen and (max-width: 991px) {
    .app40 {
        width:100%;
    }
    .app40 label{
        margin: 2% auto;
    }
    .app60{
        width:80%;
    }
}
@media only screen and (max-width: 768px) {
     .app60{
        width:100%;
    }
}
@media only screen and (max-width: 520px) {
    .app40 input{
            padding: 12px 130px 12px 27px
    }
    #mobile_code {
    padding: 13px 100px 13px 0px;
    }
    .subappconhead{
        font-size:18px;
        line-height:28px;    }
}
@media only screen and (max-width: 320px) {
    .app40 input {
    padding: 12px 100px 12px 12px;
}
   #mobile_code {
    padding: 12px 55px 12px 0px;
    }
}
</style>
