    {
      "type": "richtext",
      "id": "desc",
      "label":"Description"
    }
  ],
  "blocks": [
    {
      "type": "collab_approach_left",
      "name": "Collab Point Left",
      "limit":1,
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label":"Title"
        },
        {
          "type": "richtext",
          "id": "detail",
          "label":"Detail"
        },
        {
          "type": "text",
          "id": "title_1",
          "label":"Title"
        },
        {
          "type": "richtext",
          "id": "detail_1",
          "label":"Detail"
        },
        {
          "type": "text",
          "id": "title_2",
          "label":"Title"
        },
        {
          "type": "richtext",
          "id": "detail_2",
          "label":"Detail"
        }
      ]
    },
    {
      "type": "collab_approach_right",
      "name": "Collab Point Right",
      "limit":1,
      "settings": [
        {
          "type": "text",
          "id": "title_r",
          "label":"Title"
        },
        {
          "type": "richtext",
          "id": "detail_r",
          "label":"Detail"
        },
        {
          "type": "text",
          "id": "title_r_2",
          "label":"Title"
        },
        {
          "type": "richtext",
          "id": "detail_r_2",
          "label":"Detail"
        },
        {
          "type": "text",
          "id": "title_r_3",
          "label":"Title"
