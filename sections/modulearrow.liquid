<div class="publickbg">
    <div class="cmax_container">
      <div class="arrowpaddingspace">
        <div class="arrowheight">
                {% for block in section.blocks %}
                   <div class="arrorrad">
                        <div>
                            <h2 class="arrowtext">{{block.settings.arrowhead}}</h2>
                        </div>
                        <div class="arrow_flex">
                           <div>
                              <svg xmlns="http://www.w3.org/2000/svg" width="12" height="14" viewBox="0 0 12 14" fill="none">
                              <path d="M12 7L-6.52533e-07 13.9282L-4.68497e-08 0.0717964L12 7Z" fill="#184B44"/>
                              </svg>
                            </div>
                            <div>
                            <h2 class="arrowheaddes">{{block.settings.arrowdes}}</h2>
                            </div>
                        </div>
                    </div>
                 {% endfor %}
         
        </div>
       
      </div>
         <div class="arroww_btn">
                <a class="arrowlink" href="{{ section.settings.arrowid}}">{{section.settings.arrowtextbtn}}
                  {% render 'icon-arrow' %}
                </a>
            </div>
       
    </div>
</div>
{% if page.title == "cources page" %}
<style>
.arrowheight {
  width: 65%;
}
@media screen and (max-width:900px){  
  .arrowheight {
  width: 90%;
}
}
@media screen and (max-width:620px){  
  .arrowheight {
  width: 100%;
}
}
</style>
{% endif %}
{% schema %}
  {
    "name": "modulearrow",
    "settings": [
          {
    "type": "url",
    "id": "arrowid",
    "label": "Link Text"
      },
       {
    "type": "text",
    "id": "arrowtextbtn",
    "label": "Button"
      }
  
    ],
    "blocks": [
  {
    "type": "collection",
    "name": "Collection",
    "settings": [
   

         {
    "type": "text",
    "id": "arrowhead",
    "label": "Heading"
      },
       {
    "type": "text",
    "id": "arrowdes",
    "label": "Sub Heading"
      }
    ]
  }
    ],
    "presets": [
    {
    "name": "modulearrow"
    }
    ]
  }
{% endschema %}
